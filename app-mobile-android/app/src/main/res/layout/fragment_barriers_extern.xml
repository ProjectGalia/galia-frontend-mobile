<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".BarriersExternFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundColorTwo">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/barrier_extern_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_barrier_container"
            android:elevation="2dp"
            android:scrollbars="vertical">
        </androidx.recyclerview.widget.RecyclerView>

        <RelativeLayout
            android:id="@+id/add_barrier_extern"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_below="@+id/barrier_extern_recycler"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/ic_add_task_container">

            <Button
                android:id="@+id/add_barrier_extern_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:background="@android:color/transparent"
                android:drawableStart="@drawable/ic_plus_symbol"
                android:drawablePadding="5dp"
                android:fontFamily="@font/inter_semibold"
                android:paddingStart="5dp"
                android:text="@string/add_barrier"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="@color/gris_5"
                android:textSize="12sp" />
        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>
