<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/barrier_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/inter_regular"
        android:maxLines="1"
        android:text="DescripciÃ³n de la tarea"
        android:textColor="@color/iris_100"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/patient_title"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_below="@+id/barrier_name"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/inter_semibold"
        android:gravity="center"
        android:text="@string/patient"
        android:textColor="@color/gris_5"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/patient_name"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_below="@+id/barrier_name"
        android:layout_marginEnd="15dp"
        android:layout_toEndOf="@+id/patient_title"
        android:fontFamily="@font/inter_semibold"
        android:gravity="center"
        android:maxLines="1"
        android:text="Sandra Castro J"
        android:textColor="@color/iris_100"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/priority_title"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_below="@+id/barrier_name"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="15dp"
        android:layout_toEndOf="@+id/patient_name"
        android:gravity="center"
        android:fontFamily="@font/inter_semibold"
        android:text="@string/priority"
        android:textColor="@color/gris_5"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/priority_description"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_below="@+id/barrier_name"
        android:layout_toEndOf="@+id/priority_title"
        android:background="@drawable/ic_priority_border"
        android:text="Alta"
        android:textSize="12sp"
        android:textColor="@color/gris_5"
        android:textAllCaps="true"
        android:gravity="center"
        android:fontFamily="@font/inter_semibold"
        android:paddingLeft="11dp"
        android:paddingRight="11dp" />

    <TextView
        android:id="@+id/clasification_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/patient_title"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/inter_semibold"
        android:text="@string/clasification"
        android:textColor="@color/gris_5"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/clasification_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/patient_title"
        android:layout_toEndOf="@+id/clasification_title"
        android:fontFamily="@font/inter_semibold"
        android:maxLines="1"
        android:text="Religioso"
        android:textColor="@color/iris_100"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/type_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/priority_title"
        android:layout_alignStart="@+id/priority_title"
        android:layout_toEndOf="@+id/clasification_description"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/inter_semibold"
        android:text="@string/type"
        android:textColor="@color/gris_5"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/type_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/patient_title"
        android:layout_toEndOf="@+id/type_title"
        android:fontFamily="@font/inter_semibold"
        android:maxLines="1"
        android:text="Interna"
        android:textColor="@color/iris_100"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/code_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/clasification_title"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/inter_semibold"
        android:text="@string/code"
        android:textColor="@color/gris_3"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/code_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/clasification_title"
        android:layout_toEndOf="@+id/code_title"
        android:fontFamily="@font/inter_semibold"
        android:maxLines="1"
        android:text="B07"
        android:textColor="@color/iris_60"
        android:textSize="12sp" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/code_title"
        android:background="@color/gris_3" />

</RelativeLayout>