<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <CheckBox
        android:id="@+id/task_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:button="@drawable/ic_task_checkbox"
        android:fontFamily="@font/inter_regular"
        android:maxLines="1"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:text="Descripción de la tarea"
        android:textColor="@color/iris_100"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/patient_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/task_description"
        android:fontFamily="@font/inter_semibold"
        android:paddingLeft="26dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="@string/patient"
        android:textColor="@color/gris_5"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/patient_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/task_description"
        android:layout_toRightOf="@+id/patient_title"
        android:fontFamily="@font/inter_semibold"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:paddingTop="12dp"
        android:paddingRight="20dp"
        android:paddingBottom="12dp"
        android:text="Sandra Castro J"
        android:textColor="@color/iris_100"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/mode_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/task_description"
        android:layout_toEndOf="@+id/patient_name"
        android:fontFamily="@font/inter_semibold"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="@string/mode"
        android:textColor="@color/gris_5"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/mode_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/task_description"
        android:layout_toEndOf="@+id/mode_title"
        android:fontFamily="@font/inter_semibold"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:paddingTop="12dp"
        android:paddingRight="10dp"
        android:paddingBottom="12dp"
        android:text="Telefónico"
        android:textColor="@color/iris_100"
        android:textSize="12sp" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/patient_title"
        android:background="@color/gris_5" />

</RelativeLayout>